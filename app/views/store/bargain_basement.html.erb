<% if notice %>
    <p id="notice"><%=  notice %></p>
<% end %>

<h1>XGAMES: Bargain Basement</h1>
<div id="latest">
  <%= image_tag("brinkbargain.jpg") %>

</div>
<p>Grab a bargain now!!! Wandered here by accident??</p>
<p>Get back to our main store page <%= link_to "here", store_url %></p>
<table>

  <% @products.each do |product| %>

      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= image_tag(product.image_url, class: 'list_image_url') %></td>
        <td class="list_overview">
          <dl>
            <dt><%= link_to product.title, product %></dt>
            <dd><%= truncate(strip_tags(product.description), length: 200) %></dd>
          </dl>
        </td>
        <td><%= number_to_currency(product.price, :unit => '&euro;') %></td>



        <td class="list_actions">
          <%= link_to 'More details', product %><br/>
          <%= button_to "Add to Cart", line_items_path(:product_id => product) %>
          <%= button_to "Wish List", list_items_path(:product_id => product) %>
        </td>
      </tr>
  <% end %>
</table>