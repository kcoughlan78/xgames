<p id="notice"><%= notice %></p>

<h2>Your Parcel</h2>
<table>
  <tr>
    <th>Quantity</th>
    <th>Title</th>
    <th>Price</th>
  </tr>
  <% for item in @parcel.trade_items %>
      <tr>
        <td><%= item.quantity %></td>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency(item.quantity * item.product.price * item.product.trade_value, :unit => '&euro;') %></td>
      </tr>
  <% end %>
</table>
<br/>
Total Credit: <%= number_to_currency( @parcel.total_price, :unit => '&euro;') %><br/>
<br/>

<ul>
  <%= button_to 'Empty parcel', @parcel, :method => :delete, :confirm => 'Are you sure?' %>
  <%= button_to 'Sell more', trade_in_path %>
</ul>


<%= link_to 'Edit', edit_parcel_path(@parcel) %> |
<%= link_to 'Back', parcel_path %>
